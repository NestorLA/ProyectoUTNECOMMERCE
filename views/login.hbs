<div class="products-catagories-area clearfix">
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center pb-5 mt-5">
            <div class="heading-section text-center ftco-animate mt-5">
                <span class="subheading">Login</span>
                <h2 class="mb-4">Ingresa con tu usuario y contraseña</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-8">
                <form method="post" action="/login">
                    <div class="form-group">
                        <label for="usuario">Usuario *</label>
                        <input id="usuario" placeholder="Nombre de usuario" name="usuario"
                            class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="pass">Contraseña *</label>
                        <input type="password" id="pass" name="pass" class="form-control" placeholder="Contraseña"></input>
                    </div>
                    <h5 class="text-success text-center">{{message}}</h5>
                    <button type="submit" class="btn amado-btn btn-block">Enviar</button>
                </form>

                <a href="/registro" class="mt-2 text-center">¿No tenés cuenta? Regístrate</a>
            </div>
        </div>
    </div>
</section>
</div>