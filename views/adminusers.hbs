<div class="container" style="margin-top:10vh;">
    <div class="row">
        <div class="col-12">
            <h4>Usuarios</h4>
            <table class="table table-hover table-responsive mt-3 text-center">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Correo</th>
                        <th>Admin</th>
                        <th></th>
                        <th></th>


                    </tr>
                </thead>
                <tbody>
                    {{#each usuarios}}
                    <tr>
                        <td>{{usuario}}</td>
                        <td>{{nombre}}</td>
                        <td>{{apellido}}</td>
                        <td>{{correo}}</td>
                        <td>{{admin}}</td>
                        <td><a href="/admin/usuarios/cambiar/{{id}}/{{admin}}"><i class="fas fa-cogs text-primary pr-3 pl-3">Convertir a admin</i></a></td>
                        {{!-- /admin/productos/baja/4 --}}
                        <td><a href="/admin/usuarios/baja/{{id}}"><i class="fas fa-trash text-danger pr-3 pl-3"
                                    style="cursor: pointer;">Eliminar usuario</i></a>
                        </td>
                    </tr>
                    {{!--  XMLHTTPRequest  --}}
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>