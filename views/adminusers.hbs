<div class="container" style="margin-top:10vh;">
    <div class="row">
        <div class="col-12">
            <h4 class="text-center">Usuarios</h4>
            <div class="d-inline-flex">
             <a href="/admin/index"><button type="button" class="btn btn-warning btn-block text-white"><i class="fa fa-arrow-left" aria-hidden="true"></i>
 Volver</button></a>
            </div>
            <table class="table table-hover table-responsive mt-3 text-center table-bordered">
                <thead class="bg-warning text-white">
                    <tr>
                        <th scope="col">Usuario</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Admin</th>
                        <th scope="col"></th>
                        <th scope="col"></th>


                    </tr>
                </thead>
                <tbody>
                    {{#each usuarios}}
                    <tr>
                        <td>{{usuario}}</td>
                        <td>{{nombre}}</td>
                        <td>{{apellido}}</td>
                        <td>{{correo}}</td>
                        <td>{{admin}}</td>
                        <td><a href="/admin/usuarios/cambiar/{{id_usuario}}/{{admin}}"><i class="fas fa-cogs text-primary pr-3 pl-3">Convertir a admin</i></a></td>
                        {{!-- /admin/productos/baja/4 --}}
                        <td><a href="/admin/usuarios/baja/{{id_usuario}}"><i class="fas fa-trash text-danger pr-3 pl-3"
                                    style="cursor: pointer;">Eliminar usuario</i></a>
                        </td>
                    </tr>
                    {{!--  XMLHTTPRequest  --}}
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>